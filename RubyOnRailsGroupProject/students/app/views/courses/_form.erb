<%= form_for @course do |f| %>


    <% if @course.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@course.errors.count, "error") %> prohibited
            this course from being saved:
          </h2>
          <ul>
            <% @course.errors.full_messages.each do |msg| %>
                <li><p class="bg-danger"><%= msg %></p></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset class="form-group">
      <p>
        <%= f.label :course_number %><br>
        <%= f.text_field :c_number %>
      </p>
    </fieldset>

    <fieldset class="form-group">
      <p>
        <%= f.label :course_name %><br>
        <%= f.text_field :c_name %>
      </p>
    </fieldset>
    <fieldset class="form-group">
      <p>
        <%= f.label :course_hours %><br>
        <%= f.text_field :c_hours %>
      </p>
    </fieldset>

    <p>
      <%= f.submit "Submit Course", :class => "btn btn-primary" %>
    </p>

<% end %>