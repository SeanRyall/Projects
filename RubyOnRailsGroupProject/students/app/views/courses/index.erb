<h2>Course List</h2>
<div class = "table-responsive">
<table class = "table-bordered">
  <tr>
    <th>Course Number</th>
    <th>Course Name</th>
    <th>Course Hours</th>

  </tr>

  <% @courses.each do |course| %>
      <tr>
        <td><%= course.c_number %></td>
        <td><%= course.c_name %></td>
        <td><%= course.c_hours %></td>
        <td><%= link_to 'Show', course_path(course) %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Delete', course_path(course),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
</div>

<br>

<%= link_to new_course_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> Add Course
<% end %>


